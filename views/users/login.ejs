<% layout("/layouts/boilerplate") -%>

    <div class="row mt-3">
        <h1 class="col-6 offset-3 mb-5">login</h1>
        <div class="col-6 offset-3">
            <form action="/login" method="POST" class="needs-validation" novalidate>
                <div class="mb-3">
                    <label for="username" class="form-label flex">Username</label>
                    <input name="username" placeholder="Enter username here" type="text" class="form-control"
                        id="username" required>
                    <br />
                    <div class="mb-3">
                        <label for="password" class="form-label flex">Password</label>
                        <input name="password" placeholder="Enter password" type="password" class="form-control"
                            id="password" required>
                    </div>
                    <button class="btn btn-success">LogIn</button>
            </form>
        </div>
    </div>