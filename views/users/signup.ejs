<% layout("/layouts/boilerplate") -%>

    <div class="row mt-3">
        <h1 class="col-6 offset-3 mb-5">SignUp</h1>
        <!-- <br/> -->
        <div class="col-6 offset-3">
            <form action="/signup" method="POST" class="needs-validation" novalidate>
                <div class="mb-3">
                    <label for="username" class="form-label flex">Username</label>
                    <input name="username" placeholder="Enter username here" type="text" class="form-control"
                        id="username" required>
                    <!-- Successtext -->
                    <div class="valid-feedback">Looks good !</div>
                    <br />
                    <div class="mb-3">
                        <label for="email" class="form-label flex">E-mail</label>
                        <input name="email" placeholder="abc@gmail.com" type="email" class="form-control" id="email"
                            required>
                    </div>
                    <br />
                    <div class="mb-3">
                        <label for="password" class="form-label flex">Password</label>
                        <input name="password" placeholder="Enter password" type="password" class="form-control"
                            id="password" required>
                    </div>
                    <button class="btn btn-success">SignUp</button>
            </form>
        </div>
    </div>